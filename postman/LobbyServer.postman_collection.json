{
	"info": {
		"_postman_id": "c31ce61d-f09c-4b89-bde5-657621879bae",
		"name": "LobbyServer",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Lobbies",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{API_ROOT}}",
					"host": [
						"{{API_ROOT}}"
					]
				},
				"description": "Get all lobbies"
			},
			"response": []
		},
		{
			"name": "New Lobby",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "4381063b-0d3d-44dc-b814-9d6875a9626e",
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Returns a new lobby object\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"\r",
							"    pm.expect(jsonData.created).to.not.be.undefined;\r",
							"    pm.expect(jsonData.keepAlive).to.not.be.undefined;\r",
							"    pm.expect(jsonData.name.length).to.eql(4);\r",
							"    pm.expect(jsonData.host).to.eql(pm.globals.get(\"host\"));\r",
							"\r",
							"    pm.globals.set(\"lastName\", jsonData.name);\r",
							"});\r",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"id": "669874c1-6868-4d9e-9fcd-f1ae7d5afabd",
						"exec": [
							"pm.globals.set(\"host\", \"127.0.0.1\");\r",
							"pm.globals.set(\"data\", JSON.stringify({\r",
							"    map: 'test-map',\r",
							"    players: 6\r",
							"}));"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{API_ROOT}}new?host={{host}}&data={{data}}",
					"host": [
						"{{API_ROOT}}new"
					],
					"query": [
						{
							"key": "host",
							"value": "{{host}}"
						},
						{
							"key": "data",
							"value": "{{data}}"
						}
					]
				},
				"description": "Create a new lobby"
			},
			"response": []
		},
		{
			"name": "Get Lobby",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "68a644cb-861f-4bdf-9694-3ca0db1c5fc0",
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Returns a lobby by name\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"\r",
							"    pm.expect(jsonData.name).to.eql(pm.globals.get(\"lastName\"));\r",
							"});\r",
							"\r",
							"pm.test(\"Lobbies have custom data\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"\r",
							"    pm.expect(jsonData.data).to.eql(pm.globals.get(\"data\"));\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{API_ROOT}}lobby/:name",
					"host": [
						"{{API_ROOT}}lobby"
					],
					"path": [
						":name"
					],
					"variable": [
						{
							"key": "name",
							"value": "{{lastName}}"
						}
					]
				},
				"description": "Get an existing lobby by name"
			},
			"response": []
		},
		{
			"name": "Keepalive Lobby",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "9f11c59e-1a4c-4b93-a22c-278fd6b5a19c",
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Lobby expires is offset by keepAlive interval\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"\r",
							"    pm.expect(jsonData.expires).to.be.approximately(jsonData.created + jsonData.keepAlive, 1000);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{API_ROOT}}lobby/:name/keepalive",
					"host": [
						"{{API_ROOT}}lobby"
					],
					"path": [
						":name",
						"keepalive"
					],
					"variable": [
						{
							"key": "name",
							"value": "{{lastName}}"
						}
					]
				},
				"description": "Reset the keepalive timer for a lobby"
			},
			"response": []
		}
	],
	"protocolProfileBehavior": {}
}